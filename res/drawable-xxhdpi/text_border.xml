<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 这里用两个item shape举行重叠起来实现上下边框。。。 -->
    <item>
        <shape>

            <!-- 边框颜色 -->
            <solid android:color="#DDDDDF" />
        </shape>
    </item>
    
    <item
        android:bottom="1dip"
        android:top="1dip">
        <shape>
            <!-- 背景颜色值 -->
            <!-- 银色背景：FCFCFC -->
            <solid android:color="#fffffa" />
        </shape>
    </item>

</layer-list>